    # Initialize and train model
    ai_model = LeadScoringAI()
   
    # Train the model
    print("\n2. ü§ñ TRAINING THE AI MODEL...")
    try:
        ai_model.train(n_samples=1000)  # Reduced for faster training
        print("‚úÖ Model training completed successfully!")
    except Exception as e:
        print(f"‚ùå Model training failed: {e}")
        return
    
    # Analyze the leads
    print("\n3. üîç ANALYZING LEADS...")
    try:
        results = ai_model.analyze_leads(leads_to_analyze)
        print("‚úÖ Lead analysis completed successfully!")
    except Exception as e:
        print(f"‚ùå Lead analysis failed: {e}")
        return
   
    # Display results
    print("\n4. üìä LEAD SCORING RESULTS:")
    print("=" * 80)
    for _, result in results.iterrows():
        print(f"Lead ID: {result['lead_id']}")
        print(f" Score: {result['score']}/100")
        print(f" Category: {result['category']}")
        print(f" Priority: {result['priority']}")
        print(f" Action: {result['recommendation']}")
        print("-" * 50)
   
    # Update Salesforce if connected and we have real leads
    print("\n5. üîÑ UPDATING SALESFORCE...")
    success_count = 0
    if sf_integrator.sf and not real_leads_df.empty:
        for _, row in results.iterrows():
            lead_id = row['lead_id']
            update_result = sf_integrator.update_lead(lead_id, row.to_dict())
            if update_result:
                success_count += 1
                print(f"   ‚úÖ Updated Lead: {lead_id}")
        print(f"üìä Updated {success_count}/{len(results)} leads in Salesforce.")
    else:
        print("   ‚ö†Ô∏è  Salesforce not available or no real leads - skipping updates")
    
    # Show score distribution
    print("\n6. üìà VISUALIZING LEAD SCORES...")
    try:
        all_scores = ai_model.predict_scores(leads_to_analyze)
        ai_model.plot_lead_score_distribution(all_scores)
        print("‚úÖ Visualization completed successfully!")
    except Exception as e:
        print(f"‚ùå Visualization failed: {e}")
   
    # Save the model
    print("\n7. üíæ SAVING THE MODEL...")
    try:
        ai_model.save_model('lead_scoring_model.pkl')
        print("‚úÖ Model saved successfully!")
    except Exception as e:
        print(f"‚ùå Model save failed: {e}")
   
    # Summary statistics
    print("\n8. üìã SUMMARY:")
    print("=" * 30)
    category_counts = results['category'].value_counts()
    for category, count in category_counts.items():
        print(f" {category} Leads: {count}")
   
    avg_score = results['score'].mean()
    print(f" Average Score: {avg_score:.1f}/100")
   
    print("\nüéâ LEAD SCORING AI WITH SALESFORCE COMPLETED SUCCESSFULLY!")

if __name__ == "__main__":
    main()
